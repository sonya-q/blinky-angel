{
  "name": "Blinky Angel",
  "description": "Protect your eyes with blink detection and 20-20-20 reminders!",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage", "tabs", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "assets/Happy.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/blink-detector.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content/tf-inject.js",
        "assets/Happy.png",
        "assets/EyesOpen.png",
        "assets/EyesClosed.png",
        "assets/sideToSide.png",
        "assets/SideToSide2.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}